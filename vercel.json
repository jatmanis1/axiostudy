{
  "version": 2,
  "builds": [
    {
      "src": "easy_study/wsgi.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "easy_study/wsgi.py"
    },
    {
      "src": "/api/pdf",
      "dest": "/api/pdf.js"  
    }
  ],
  "headers": [
    {
      "source": "/api/pdf",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Content-Type",
          "value": "application/pdf"
        }
      ]
    }
  ]
}
